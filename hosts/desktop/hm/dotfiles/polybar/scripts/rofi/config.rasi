configuration {
    drun-display-format: "{icon} {name}";
    display-drun: "Files";
	show-icons: true;
	icon-theme: "NordArc-Icons";
	location: 0;
	yoffset: 0;
    xoffset: 0;	
	fake-transparency: false;
	hide-scrollbar: true;
	bw: 0;
    fullscreen: false;
    show-icons: true;
	terminal: "kitty";
	sidebar-mode: false;
}

// light
* {
ac: #5e81ac;
bg: #2e3440FF;
bg-alt: #434c5e;
fg: #d8dee9;
fg-alt: #d8dee9FF;
fg-search-box: #2e3440FF;
}

